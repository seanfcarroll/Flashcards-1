
<div class="container">
  <div class="well">
    <h2 style="font-weight: 200;">You are playing the following deck: <b> <%= @game.deck.name %></b></h2>
    <div class="score-holder" style="display: flex;">
      <p class="score-counter">Correct answers: <%= @game.right %></p>
      <p class="score-counter">Incorrect answers: <%= @game.wrong %></p>
    </div>
  </div>
  <hr />
  <div class="row">
    <div class="col-md-3">
      <% if @messages %>
        <% @messages.each do |message| %>
        <p> <%= message %></p>
        <% end %>
      <% end %>
      <h1><%= current_card.name %></h1>
      <img src="<%= current_card.image_url %>" height="250" />
    </div>
    <div class="col-md-9">
      <h3>This spirit animal has the following attribute: </h3>
      <table class="table table-striped table-bordered">
        <thead>
          <tr>Choose one of the following:</tr>
        </thead>
        <tbody>
          <% @cards.each_with_index do |card, idx| %>
            <tr class="guesses">
              <th><%= @letters[idx] %>.</th>
              <th>
                 <%= card %>
              </th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="button-wrapper">
      <div class="col-md-3">
        <form class="" action="/games/<%= @game.id %>/guess" method="post">
          <input type="hidden" name="selection" value="<%= @cards[0] %>">
          <input type="submit" name="name" value="A" class="btn btn-lg btn-primary">
        </form>
      </div>
      <div class="col-md-3">
        <form class="" action="/games/<%= @game.id %>/guess" method="post">
          <input type="hidden" name="selection" value="<%= @cards[1] %>">
          <input type="submit" name="name" value="B" class="btn btn-lg btn-success">
        </form>
      </div>
      <div class="col-md-3">
        <form class="" action="/games/<%= @game.id %>/guess" method="post">
          <input type="hidden" name="selection" value="<%= @cards[2] %>">
          <input type="submit" name="name" value="C" class="btn btn-lg btn-warning">
        </form>
      </div>
    </div>
  </div>
</div>
